/*-----QPushButton-----*/

QMainWindow, QProgressBar
{
    background-color: #262729;
}

QPushButton
{
	background-color: #00ff4f;
	color: #000000;
	font-weight: bold;
	border-style: solid;
	border-color: #000000;
	padding: 6px;
}

QPushButton::hover
{
	background-color: #6aff95;

}
QPushButton::pressed
{
	background-color: #52c573;

}


