/*-----QTabWidget-----*/

QTabWidget
{
	border-top: 0px solid #C2C7CB; 
	background-color: #262729;
    /*background-color: #54565a;*/
}

QTabWidget::pane 
{ 
    border: none;
	background-color: #262729;
}
QTabWidget::tab-bar 
{
    left: 5px; 
	background-color: #262729;
}

QTabWidget::tab-bar:top {
    top: 1px;
}

QTabBar::close-button
{
    background-color: #acacad;
    color: #fff;
    padding: 3px;
    /*background-image: url(:/qss_icons/rc/close.png);*/
}

QTabBar::close-button:hover
{
    background-color: #5c9cc2;
    /*background: transparent;*/
}



QTabBar::tab 
{
	background-color: #54565a;
    color: #cacaca;
    min-width: 1px;
	padding-left: 25px;
	margin-left:-22px;
    height: 28px;
	/*border: 2px;
    border-left: #00f7ff;
    border-top:#00f7ff;
    border-right: #00f7ff;
    border-bottom: none;*/
}


QTabBar::tab:selected 
{
    color: #fff;
	font-weight: bold;
    height: 28px;

}


QTabBar::tab:!first 
{
    margin-left: -20px;

}


QTabBar::tab:hover 
{
    font-weight: bold;
    background-color: #345a70;
}

/*-----QScrollBar-----*/
QScrollBar:horizontal 
{
    background-color: transparent;
    height: 8px;
    margin: 0px;
    padding: 0px;

}


QScrollBar::handle:horizontal 
{
    border: none;
	min-width: 100px;
    background-color: #56576c;

}


QScrollBar::add-line:horizontal, 
QScrollBar::sub-line:horizontal,
QScrollBar::add-page:horizontal, 
QScrollBar::sub-page:horizontal 
{
    width: 0px;
    background-color: transparent;

}


QScrollBar:vertical 
{
    background-color: transparent;
    width: 8px;
    margin: 0;

}


QScrollBar::handle:vertical 
{
    border: none;
	min-height: 100px;
    background-color: #56576c;

}


QScrollBar::add-line:vertical, 
QScrollBar::sub-line:vertical,
QScrollBar::add-page:vertical, 
QScrollBar::sub-page:vertical 
{
    height: 0px;
    background-color: transparent;

}

